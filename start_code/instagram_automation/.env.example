# Instagram Automation - Environment Configuration

# Instagram Test Accounts (2 accounts for multi-account management)
INSTAGRAM_TEST_ACCOUNT_1=test_phone_case_1
INSTAGRAM_TEST_PASSWORD_1=your_password_1_here
INSTAGRAM_TEST_ACCOUNT_2=test_earbuds_2
INSTAGRAM_TEST_PASSWORD_2=your_password_2_here

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500

# Midjourney API Configuration (via ImaginePro)
MIDJOURNEY_API_KEY=your-midjourney-api-key-here
MIDJOURNEY_BASE_URL=https://api.imaginepro.ai/api/v1

# PostgreSQL Database
DATABASE_URL=postgresql://dbuser:dbpassword@localhost:5432/instagram_automation

# Redis (optional, for task queue)
REDIS_URL=redis://localhost:6379/0

# Cost Budget (USD per month)
MONTHLY_BUDGET=100
DAILY_BUDGET=3.33

# Rate Limiting
MAX_LIKES_PER_HOUR=20
MAX_FOLLOWS_PER_HOUR=10
MAX_COMMENTS_PER_HOUR=5
MAX_POSTS_PER_DAY=2
MAX_DAILY_INTERACTIONS=25

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/automation.log

# Content Configuration
CONTENT_LANGUAGE=en
DEFAULT_CONTENT_TYPE=product_review
ENABLE_IMAGE_CACHE=true

# Account Configuration
# Account 1: Phone cases and screen protectors
ACCOUNT_1_PRIMARY_CATEGORY=phone_case
ACCOUNT_1_SECONDARY_CATEGORIES=phone_film

# Account 2: Earbuds and noise-cancelling headphones
ACCOUNT_2_PRIMARY_CATEGORY=earbuds
ACCOUNT_2_SECONDARY_CATEGORIES=noise_cancelling_headphone

# Shared categories (rotate between accounts)
SHARED_CATEGORIES=charging_cable,charger

# Timezone
TIMEZONE=UTC

# Proxy (optional)
# USE_PROXY=true
# PROXY_URL=socks5://127.0.0.1:30235
